generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  fullname  String?
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}

model Report {
  id         Int      @id @default(autoincrement())
  chantierId Int
  imageUrl   String
  latitude   Float
  longitude  Float
  createdAt  DateTime @default(now())
}

model TenantRequest {
  id          Int      @id @default(autoincrement())
  companyName String
  contactName String
  email       String
  status      String   @default("pending")
  createdAt   DateTime @default(now())
}

model Trial {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  company   String?
  phone     String?
  createdAt DateTime @default(now())
}

model Affiliate {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  company   String?
  phone     String?
  createdAt DateTime @default(now())
}
